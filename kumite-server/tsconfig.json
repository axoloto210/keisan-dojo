{
    "compilerOptions": {
        "target": "ESNext",
        "rootDir": "src",
        "outDir": "./dist/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
